@page
@model OCFX.Pages.MadminAccess.Programs.CreateModel

@{
	ViewData["Title"] = "Create";
    ViewData["BannerTitle"] = "Create-A-Program";
    ViewData["BannerSubtitle"] = "Use this interface to basically make a thing that will create a new thing for your people to hate eventually.";
}
<p>This is where you decide the set up for some nifty new programs and such... or just torture people. Whichever, really!</p>
<hr />
<div class="row">
	<div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WorkoutProgram.WorkoutId" class="control-label h6"></label>
                <select asp-for="WorkoutProgram.WorkoutId" class="form-control" asp-items="Model.Worklist"></select>
            </div>
            <div class="form-group">
                <label asp-for="WorkoutProgram.CampaignId" class="control-label h6"></label>
                <select asp-for="WorkoutProgram.CampaignId" class="form-control" asp-items="Model.CampaignList"></select>
            </div>
            <div class="form-group">
                <label asp-for="WorkoutProgram.Sets" class="control-label h6"></label>
                <input asp-for="WorkoutProgram.Sets" class="form-control" />
                <span asp-validation-for="WorkoutProgram.Sets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkoutProgram.Repetitions" class="control-label h6"></label>
                <input asp-for="WorkoutProgram.Repetitions" class="form-control" />
                <span asp-validation-for="WorkoutProgram.Repetitions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label h6">Available Exercises</label>
                @foreach (var item in Model.ExerciseSet)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="selectedExercises" value="@item.Id" />
                        <label class="form-check-label" for="selectedExercises">@item.Name</label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
	</div>
</div>

<div>
	<a asp-page="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
