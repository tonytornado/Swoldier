@page
@model OCFX.Pages.MadminAccess.Exercises.CreateModel

@{
    ViewData["Title"] = "Create Exercises";
}

<h2>Create</h2>
<h6>Exercise</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Exercise.ExName" class="control-label"></label>
                <input asp-for="Exercise.ExName" class="form-control" />
                <span asp-validation-for="Exercise.ExName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exercise.ExType" class="control-label"></label>
                <select asp-for="Exercise.ExType" asp-items="Html.GetEnumSelectList<OCFX.DataModels.Exercise.ExerciseType>()" class="form-control"></select>
                <span asp-validation-for="Exercise.ExType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exercise.ExGroup" class="control-label"></label>
                <select asp-for="Exercise.ExGroup" asp-items="Html.GetEnumSelectList<OCFX.DataModels.Workout.WorkoutType>()" class="form-control" ></select>
                <span asp-validation-for="Exercise.ExGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
