@page
@model OCFX.Pages.Profiles.EditProfileModel

@{
	ViewData["Title"] = "Profile Edit";
    ViewData["BannerTitle"] = "Edit";
    ViewData["BannerSubtitle"] = "Okay fine. We'll let you change a few things, even your gender! Just remember, it does change how we view you... fitness-wise.";
}
<partial name="_StatusMessage" model="Model.StatusMessage" />
<form method="post">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<input type="hidden" asp-for="Profile.Id" />
	<h2 class="text-center">Edit Profile and Stats</h2>
		<div class="form-row ">
			<div class="col-sm-10">
				<div class="form-group">
					<label asp-for="Profile.FirstName" class="control-label"></label>
					<input asp-for="Profile.FirstName" class="form-control form-control-plaintext" readonly />
					<span asp-validation-for="Profile.FirstName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Profile.LastName" class="control-label"></label>
					<input asp-for="Profile.LastName" class="form-control form-control-plaintext" readonly />
					<span asp-validation-for="Profile.LastName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Profile.Age" class="control-label"></label>
					<input asp-for="Profile.Age" class="form-control form-control-plaintext" readonly />
					<span asp-validation-for="Profile.Age" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Profile.Gender" class="control-label"></label>
					<select asp-for="Profile.Gender" asp-items="@Html.GetEnumSelectList<OCFX.DataModels.ProfileSheet.GenderSpectrum>()" class="form-control"></select>
					<span asp-validation-for="Profile.Gender" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Profile.FitStyle.Id" class="control-label">Class Name</label>
					<select asp-for="Profile.FitStyle.Id" class="form-control" asp-items="Html.GetEnumSelectList<OCFX.DataModels.ClassType>()" ></select>
				</div>
			</div>
			<div class="col-sm-2">
				<div class="form-group">
					<label asp-for="Profile.Height" class="control-label"></label>
					<input asp-for="Profile.Height" class="form-control" />
					<span asp-validation-for="Profile.Height" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Profile.Weight" class="control-label"></label>
					<input asp-for="Profile.Weight" class="form-control" />
					<span asp-validation-for="Profile.Weight" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Profile.NeckMeasurement" class="control-label"></label>
					<input asp-for="Profile.NeckMeasurement" class="form-control" />
					<span asp-validation-for="Profile.NeckMeasurement" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Profile.WaistMeasurement" class="control-label"></label>
					<input asp-for="Profile.WaistMeasurement" class="form-control" />
					<span asp-validation-for="Profile.WaistMeasurement" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Profile.HipMeasurement" class="control-label"></label>
					<input asp-for="Profile.HipMeasurement" class="form-control" />
					<span asp-validation-for="Profile.HipMeasurement" class="text-danger"></span>
				</div>
			</div>
		</div>
		<br />
		<div class="btn btn-group d-flex">
			<input type="submit" value="Save" class="btn btn-outline-dark" />
			<a asp-page="./Index" class="btn btn-primary">Back</a>
		</div>
</form>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
