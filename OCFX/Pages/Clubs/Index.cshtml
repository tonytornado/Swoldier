@page
@model OCFX.Pages.Clubs.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h2>Clubs</h2>
    <h4>Welcome to the Club.</h4>
    <hr />
</div>
@if (Model.Gyms != null)
{
<ul class="list-group">
    @foreach (var gym in Model.Gyms)
    {
        <li class="list-group-item">
            <div class="d-flex justify-content-between align-middle">
                <h3>@gym.Title</h3>
                @if (gym.Amenities != null)
                {
                    <ul>
                        @foreach (var item in gym.Amenities)
                        {
                            <li>@item.EquipName</li>
                        }
                    </ul>
                }
                else { }
                <h6>
                    <a asp-page="./Community" asp-route-id="@gym.Id" class="btn btn-outline-dark">Info</a>
                </h6>
            </div>
        </li>
    }
</ul>
}