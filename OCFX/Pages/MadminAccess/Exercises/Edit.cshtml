@page
@model OCFX.Pages.MadminAccess.Exercises.EditModel

@{
    ViewData["Title"] = "Edit Exercise";
}

<h2>Edit</h2>

<h4>Exercise</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Exercise.Id" />
            <div class="form-group">
                <label asp-for="Exercise.Name" class="control-label"></label>
                <input asp-for="Exercise.Name" class="form-control" />
                <span asp-validation-for="Exercise.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exercise.ExerType" class="control-label"></label>
                <select asp-for="Exercise.ExerType"  asp-items="Html.GetEnumSelectList<OCFX.DataModels.Exercise.ExerciseType>()"class="form-control"></select>
                <span asp-validation-for="Exercise.ExerType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exercise.TargetedMuscles" class="control-label"></label>
                <select asp-for="Exercise.TargetedMuscles"  asp-items="Html.GetEnumSelectList<OCFX.DataModels.Workout.WorkoutType>()" class="form-control" ></select>
                <span asp-validation-for="Exercise.TargetedMuscles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
