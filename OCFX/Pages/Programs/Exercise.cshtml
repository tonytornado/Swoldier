@page "{id}"
@model OCFX.Pages.Programs.ExerciseModel
@{
    ViewData["Title"] = Model.Ex.Name;
    ViewData["BannerTitle"] = ViewData["Title"];
    ViewData["BannerSubTitle"] = "";
}

<h1>
    @Model.Ex.ExerciseTitle
</h1>
<section>
    <div class="row">
        @if (Model.Ex.Url != null)
        {
            <div class="col-md">
                <iframe width="560" height="315" src="@Model.Ex.Url" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                <hr />
            </div>
        }
        <div class="col-md">
            <div>
                <table>
                    <thead>
                        <tr>
                            <th colspan="2">Exercise Data</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Type</td>
                            <td>@Model.Ex.ExerType</td>
                        </tr>
                        <tr>
                            <td>Target</td>
                            <td>@Model.Ex.TargetedMuscles</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div>@Model.Ex.Description</div>
        </div>
    </div>
    <div>
        <a href="#" onclick="history.go(-1);return false;" class="btn btn-block">Back</a>
    </div>
</section>