@page
@model OCFX.Pages.Programs.IndexModel
@{
    ViewData["Title"] = "Workout Programs";
    ViewData["BannerTitle"] = "Workout Programs";
    ViewData["BannerSubTitle"] = "Think you're tough enough?";
}


<div>
    <ul class="list-group list-group-flush">
        @foreach (var item in Model.Workouts)
        {
        <li class="list-group-item text-center"><a asp-page="Detail" asp-route-id="@item.Id" class="stretched-link btn btn-block btn-outline-dark">@item.Title</a></li>
        }
        </ul>
</div>

