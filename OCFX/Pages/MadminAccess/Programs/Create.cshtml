@page
@model OCFX.Pages.MadminAccess.Programs.CreateModel

@{
	ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>WorkoutProgram</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="WorkoutProgram.WorkoutId" class="control-label h6"></label>
				<select asp-for="WorkoutProgram.WorkoutId" class="form-control" asp-items="Model.Worklist"></select>
			</div>
			<div class="form-group">
				<label class="control-label h6">Available Exercises</label>
				@foreach (var item in Model.ExerciseSet)
				{
					<div class="form-check">
						<input class="form-check-input" type="checkbox" name="selectedExercises" value="@item.Id" />
						<label class="form-check-label" for="selectedExercises">@item.ExName</label>
					</div>
				}
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
