@page
@model OCFX.Pages.Dashboard.AddWeightModel
@{
    ViewData["Title"] = "Add Current Weight";
    ViewData["BannerTitle"] = ViewData["Title"];
    ViewData["BannerSubTitle"] = "";
}

<section class="col-md-8 shadowbox-xy">
    <form method="post" enctype="multipart/form-data" asp-route-Id="@Model.Player.ProfileId">
        <div class="form-group">
            <label asp-for="Input.Weight"></label>
            <input asp-for="Input.Weight" class="form-control form-inline" />
            <span asp-validation-for="Input.Weight" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Image">Progress Photo? [Optional]</label>
            <input type="file" asp-for="Image" class="form-control form-control-file" style="height:auto" />
        </div>
        <div class="form-group">
            <label asp-for="Input.Caption" class="control-label">Note [Optional]</label>
            <textarea asp-for="Input.Caption" class="form-control" rows="6" placeholder="Any thoughts?"></textarea>
        </div>
        <div>
            <button class="btn btn-block btn-primary" type="submit">Update</button>
        </div>
    </form>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}