@page "{id}"
@model OCFX.Pages.Clubs.CommunityModel
@{
    ViewData["Title"] = "Community";
    ViewData["BannerTitle"] = Model.GymDetail.Gym.Title;
    ViewData["BannerSubtitle"] = "Members: " + @Model.MemberCount;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<section class="row">
    <div class="col-md-8">
        <div>
            <p>@Model.GymDetail.Gym.Description</p>
        </div>
        @if (Model.MemberCount != 0)
        {
            <div>
                <h5>Members of @Model.GymDetail.Gym.Title</h5>
                <ul class="list-group">
                    @foreach (var athlete in Model.GymMembers
         .Where(i => i.Status != DataModels.Membership.MembershipType.Banned && i.Status != DataModels.Membership.MembershipType.Pending))
                    {
                        <li class="list-group-item">
                            <div class="d-inline-flex w-100 justify-content-between align-content-center">
                                <div>
                                    <h4>
                                        <a asp-page="/Profiles/Index" asp-route-id="@athlete.Member.Id">@athlete.Member.FirstName @athlete.Member.LastName</a>
                                    </h4>
                                    <h6>@athlete.Member.FitStyle.SkillMod @athlete.Member.FitStyle.FitType - @athlete.Status</h6>
                                    @if (Model.GymDetail.Gym.Leader == Model.Visitor.Profile && athlete.Status != DataModels.Membership.MembershipType.Leader)
                                    {
                                        <form method="post">
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-primary" asp-route-memberId="@athlete.Member.Id" asp-route-gymId="@Model.GymDetail.Id" asp-page-handler="PromoteMember">Promote</button>
                                                <button class="btn btn-secondary" asp-route-memberId="@athlete.Member.Id" asp-route-gymId="@Model.GymDetail.Id" asp-page-handler="DenySubmission">Remove</button>
                                                <button class="btn btn-danger" asp-route-memberId="@athlete.Member.Id" asp-route-gymId="@Model.GymDetail.Id" asp-page-handler="BanMember">Ban</button>
                                            </div>
                                        </form>
                                    }
                                </div>
                                <img src="~/images/uploads/@athlete.Member.Photos.FirstOrDefault(m => m.ProfileId == athlete.Member.Id).URL" alt="Alternate Text" class="friend_avatar border">
                            </div>
                        </li>
                    }
                </ul>
            </div>
        }
        else
        {
            <div>The party isn't here, yet...</div>
        }
        <hr />
        <div class="container-fluid" id="choice_container">
            @if (Model.Subscription == null)
            {
                if (Model.ClubAllegiance)
                {
                    <form method="post">
                        <p>Sign up?</p>
                        <div class="btn-group btn-group-sm">
                            <input asp-page-handler="ClubSignUp" asp-route-id="@Model.GymDetail.Gym.Id" value="Join Club" type="submit" class="btn btn-primary" />
                            <a asp-page="./Index" class="btn btn-secondary">Back to clubs</a>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-danger">
                        <p class="text-danger">
                            You are with a club already.
                            <hr />
                            Slow the hell down, mate! Leave that one before you can join another.
                        </p>
                    </div>
                }
            }
            else if (Model.Subscription.Status == DataModels.Membership.MembershipType.Member)
            {
                <form method="post">
                    <p>Wanna leave, punk?</p>
                    <div class="btn-group btn-group-sm">
                        <input asp-page-handler="ClubRemove" asp-route-id="@Model.GymDetail.Gym.Id" value="Leave Club" type="submit" class="btn btn-danger" />
                        <a asp-page="./Index" class="btn btn-secondary">Back to clubs</a>
                    </div>
                </form>
            }
            else if (Model.Subscription.Status == DataModels.Membership.MembershipType.Pending)
            {
                <form method="post">
                    <p>Your application is pending</p>
                    <div class="btn-group btn-group-sm">
                        <input asp-page-handler="ClubRemove" asp-route-id="@Model.GymDetail.Gym.Id" value="Cancel" type="submit" class="btn btn-dark" />
                        <a asp-page="./Index" class="btn btn-secondary">Back to clubs</a>
                    </div>
                </form>
            }
            else if (Model.Subscription.Status == DataModels.Membership.MembershipType.Mentor)
            {
                <p>You're guilded!</p>
            }
            else if (Model.Subscription.Status == DataModels.Membership.MembershipType.Leader)
            {
                <p>You're the leader. Do something, if you've got some time.</p>
                @if (Model.GymDetail.Gym.Members.Where(m => m.Status == DataModels.Membership.MembershipType.Pending).Count() > 0)
                {
                    <div class="border rounded p-3">
                        <h6 class="text-right">Seems you've got some people knocking at the door. Better answer them. Make sure you ask them for the password.</h6>
                        <ul class="list-group-flush">
                            @foreach (var applicant in Model.GymMembers.Where(m => m.Status == DataModels.Membership.MembershipType.Pending))
                            {
                                <li class="list-group-item">
                                    <div class="d-inline-flex w-100 justify-content-between align-content-center">
                                        <div>
                                            <h4>
                                                <a asp-page="/Profiles/Index" asp-route-id="@applicant.Member.Id">@applicant.Member.FirstName @applicant.Member.LastName</a>
                                            </h4>
                                            <h6>@applicant.Member.FitStyle.SkillMod @applicant.Member.FitStyle.FitType - @applicant.Status</h6>
                                            <form method="post">
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-primary" asp-route-memberId="@applicant.Member.Id" asp-route-gymId="@Model.GymDetail.Gym.Id" asp-page-handler="AcceptSubmission">Accept</button>
                                                    <button class="btn btn-danger" asp-route-memberId="@applicant.Member.Id" asp-route-gymId="@Model.GymDetail.Gym.Id" asp-page-handler="DenySubmission">Deny</button>
                                                </div>
                                            </form>
                                        </div>
                                        <img src="~/images/uploads/@applicant.Member.Photos.FirstOrDefault(m => m.ProfileId == applicant.Member.Id).URL" alt="Alternate Text" class="friend_avatar border">
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                }
            }
        </div>
    </div>
    <div class="col-sm-4" id="amenities_boardpost_container">
        @if (Model.ClubAllegiance == false && Model.Subscription != null)
        {
            <div id="messageBoard_container">
                @if (Model.MessageBoardPosts > 0)
                {
                    <h2><a asp-page="MessageBoard/Index" asp-route-id="@Model.GymDetail.Gym.Id" class="btn btn-block btn-primary">Message Board</a></h2>
                }
                else
                {
                    <h2><a href="#" class="btn btn-block btn-dark">Message Board</a></h2>
                }
            </div>
        }
        <div class="pt-3" id="amenities_container">
            <h3>Amenities</h3>
            <hr />
            @if (Model.EquipmentDetail != null)
            {
                <ul class="list-group">
                    @foreach (var item in Model.EquipmentDetail)
                    {
                        <li class="list-group-item">
                            <b>@item.Equipment.EquipName</b>
                            <br /> @item.Equipment.EquipDescription
                        </li>
                    }
                </ul>
            }
            else
            {
                <h3>N/A</h3>
            }
        </div>
    </div>
</section>
