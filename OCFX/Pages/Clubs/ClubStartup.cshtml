@model OCFX.Pages.Clubs.ClubStartupModel
@{
    ViewData["Title"] = "Club Startup";
    ViewData["BannerTitle"] = "Create a Club";
    ViewData["BannerSubtitle"] = "Let's create a club!";
}
<form method="post">
    <section class="shadowbox-xy">
        <div class="form-group form-group-lg">
            <label asp-for="Gym.Title"></label>
            <input asp-for="Gym.Title" class="form-control form-control-lg" />
            <span asp-validation-for="Gym.Title" class="text-danger" />
        </div>
        <div class="form-group form-group-lg">
            <label asp-for="Gym.Description"></label>
            <textarea asp-for="Gym.Description" class="form-control form-control-lg"></textarea>
            <span asp-validation-for="Gym.Description" class="text-danger" />
        </div>
        <div>

        </div>
    </section>
    <hr />
    <p>All clubs are required to have regular meetings to keep standing.</p>
    <div class="form-row insetbox-xy">
        <div class="form-group col-sm-4">
            <label asp-for="Gym.MeetingFrequency"></label>
            <select asp-for="Gym.MeetingFrequency" asp-items="@Html.GetEnumSelectList<OCFX.DataModels.Session.MeetingInterval>()" class="form-control"></select>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Gym.MeetingDate"></label>
            <select asp-for="Gym.MeetingDate" asp-items="@Html.GetEnumSelectList<DayOfWeek>()" class="form-control"></select>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Gym.MeetingTime"></label>
            <input asp-for="Gym.MeetingTime" class="form-control" />
            <span asp-validation-for="Gym.MeetingTime" class="text-danger" />
        </div>
    </div>
