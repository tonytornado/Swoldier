@page
@model OCFX.Pages.MadminAccess.Campaigns.CreateModel

@{
	ViewData["Title"] = "Create Campaign";
}

<h2>Create</h2>

<h4>Campaign</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Campaign.Name" class="control-label"></label>
				<input asp-for="Campaign.Name" class="form-control" />
				<span asp-validation-for="Campaign.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Campaign.Details" class="control-label"></label>
				<textarea asp-for="Campaign.Details" class="form-control" rows="6" cols="40"></textarea>
				<span asp-validation-for="Campaign.Details" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Campaign.Lore" class="control-label"></label>
				<textarea asp-for="Campaign.Lore" class="form-control" rows="6" cols="40"></textarea>
				<span asp-validation-for="Campaign.Lore" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Campaign.Risk" class="control-label"></label>
				<select asp-for="Campaign.Risk" asp-items="@Html.GetEnumSelectList<OCFX.DataModels.RiskLevel>()" class="form-control"></select>
				<span asp-validation-for="Campaign.Risk" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Campaign.Nutrition.Id" class="control-label"></label>
				<select asp-for="Campaign.Nutrition.Id" asp-items="@Model.DietListing" class="form-control">
					<option>Choose a diet...</option>
				</select>
				<span asp-validation-for="Campaign.Nutrition.Id" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
