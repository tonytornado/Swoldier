@page
@model OCFX.Pages.MadminAccess.Clubs.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>FitCharacter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Club.Id" />
            <div class="form-group">
                <label asp-for="Club.Title" class="control-label"></label>
                <input asp-for="Club.Title" class="form-control" />
                <span asp-validation-for="Club.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club.Description" class="control-label"></label>
                <input asp-for="Club.Description" class="form-control" />
                <span asp-validation-for="Club.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club.Leader" class="control-label"></label>
                <input asp-for="Club.Leader" class="form-control" />
                <span asp-validation-for="Club.Leader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
