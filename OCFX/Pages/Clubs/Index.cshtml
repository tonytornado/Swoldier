@page
@model OCFX.Pages.Clubs.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h2>Clubs</h2>
    <h4>Welcome to the Club.</h4>
    <hr />
</div>
@if (Model.Gyms != null)
{
    @foreach (var gym in Model.Gyms)
    {
        <div>
            <h3>@gym.Title</h3>
            <h6>Leader: @gym.Leader</h6>
            @if (gym.Amenities != null)
            {
                <ul>
                    @foreach (var item in gym.Amenities)
                    {
                        <li>@item.EquipName</li>
                    }
                </ul>
            }
            else { }
            <h6>
                <a asp-page="./Community" asp-route-id="@gym.Id" class="btn btn-sm btn-outline-dark">Info</a>
            </h6>
        </div>
    }
}