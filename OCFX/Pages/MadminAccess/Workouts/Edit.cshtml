@page
@model OCFX.Pages.MadminAccess.Workouts.EditModel

@{
	ViewData["Title"] = "Edit Workout";
}

<h4>Workout</h4>
<h6 class="small">Edit</h6>

<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Workout.Id" />
			<div class="form-group">
				<label asp-for="Workout.Title" class="control-label"></label>
				<input asp-for="Workout.Title" class="form-control" />
				<span asp-validation-for="Workout.Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Workout.Description" class="control-label"></label>
				<textarea asp-for="Workout.Description" class="form-control"></textarea>
				<span asp-validation-for="Workout.Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Workout.Duration" class="control-label"></label>
				<input asp-for="Workout.Duration" class="form-control" />
				<span asp-validation-for="Workout.Duration" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Workout.TargetedMuscles" class="control-label"></label>
				<select asp-for="Workout.TargetedMuscles" asp-items="Html.GetEnumSelectList<OCFX.DataModels.Workout.WorkoutType>()" class="form-control"></select>
				<span asp-validation-for="Workout.TargetedMuscles" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Workout.DateAdded" class="control-label"></label>
				<input asp-for="Workout.DateAdded" class="form-control" />
				<span asp-validation-for="Workout.DateAdded" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
